{
  "overrides": [
    {
      "files": "*.xml",
      "options": {
        "xmlSelfClosingSpace": false
      }
    },
    {
      "files": "*.yaml",
      "options": {
        "singleQuote": true,
        "printWidth": 120
      }
    },
    {
      "files": "*.twig",
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.tsx", "*.ts"],
      "options": {
        "tabWidth": 2,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 120,
        "useTabs": false,
        "endOfLine": "auto"
      }
    }
  ]
}
