{
  "overrides": [
    {
      "files": "*.xml",
      "options": {
        "xmlSelfClosingSpace": false
      }
    },
    {
      "files": "*.yaml",
      "options": {
        "singleQuote": true,
        "printWidth": 120
      }
    },
    {
      "files": "*.twig",
      "options": {
        "twigPrintWidth": 120,
        "tabWidth": 2
      }
    }
  ]
}
