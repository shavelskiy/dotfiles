[user]
  name = Vladislav Shavelskiy
  email = v.shavelsky@gmail.com
[alias]
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[diff]
  tool = vimrdiff
[difftool "vimrdiff"]
  cmd = vimr --vi --wait -d $LOCAL $REMOTE
[merge]
  tool = vimrdiff
[mergetool "vimrdiff"]
  cmd = vimr --vi --wait -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[core]
  editor = vi
  pager = delta
[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
[pull]
  rebase = false
